<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InteractionUtilisateur.UtilisateurMP"
    android:background="@color/black">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMPutilisateur"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_marginTop="50dp" />


    <ImageButton
        android:clickable="true"
        android:src="@drawable/homenonactif"
        android:id="@+id/HomeBTNMpUtilisateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/recyclerViewMPutilisateur"
        android:layout_toLeftOf="@+id/MessageBTNMpUtilisateur"
        android:text="Button"
        android:layout_marginRight="30dp"/>

    <ImageButton
        android:clickable="true"
        android:background="@color/black"
        android:src="@drawable/messageactif"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/MessageBTNMpUtilisateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerViewMPutilisateur"
        android:text="Button" />

    <ImageButton
        android:clickable="true"
        android:src="@drawable/infoprofilnonactif"
        android:background="@color/black"
        android:layout_marginTop="7dp"
        android:id="@+id/InfoPorofilBTNMpUtilisateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerViewMPutilisateur"
        android:layout_toRightOf="@+id/MessageBTNMpUtilisateur"
        android:text="Button"
        android:layout_marginLeft="30dp"/>

</RelativeLayout>