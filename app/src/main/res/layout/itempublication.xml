<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300px"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iconUtilisateurPublications"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@color/white"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/PublicationsPosteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/03/2022"
        android:layout_toRightOf="@+id/iconUtilisateurPublications"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/LikePublication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like : 0"
        android:layout_toRightOf="@+id/iconUtilisateurPublications"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/PublicationsPosteDate"/>

</RelativeLayout>