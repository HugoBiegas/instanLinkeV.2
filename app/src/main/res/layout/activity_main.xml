<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@color/noir"
    android:saveEnabled="false"
    >

    <!-- Incluez votre toolbar -->
    <include layout="@layout/activity_toolbar"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/HomeBTNPost"
        android:layout_marginVertical="50dp"/>

    <ImageButton
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:src="@drawable/homeactif"
        android:id="@+id/HomeBTNPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/MessageBTNPost"
        android:text="Button"
        android:layout_marginRight="30dp"/>

    <ImageButton
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:background="@color/black"
        android:src="@drawable/messagenonactif"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/MessageBTNPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <ImageButton
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:src="@drawable/infoprofilnonactif"
        android:background="@color/black"
        android:layout_marginTop="7dp"
        android:id="@+id/InfoPorofilBTNPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/MessageBTNPost"
        android:text="Button"
        android:layout_marginLeft="30dp"/>

    <ProgressBar
        android:id="@+id/progressBarMainActiviti"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
